<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
	<style name="ContentTitleStyle" parent="AppBaseTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="ContentItemStyle" parent="AppBaseTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="layout_horizontal" parent="@style/layout_full">
        <item name="android:layout_width">0.0px</item>
    </style>
    <style name="et_phone_style">
        <item name="android:background">@drawable/input_bg_02</item>
        <item name="android:paddingLeft">@dimen/et_padding_left</item>
        <item name="android:maxLength">13</item>
    </style>
    
    <style name="aboutLableStyle" parent="AppBaseTheme">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/about_label_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="footerLableStyle" parent="AppBaseTheme">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/footer_label_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
     <style name="aboutTitleStyle" parent="AppBaseTheme">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/about_title_size</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>