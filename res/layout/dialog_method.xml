<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
<RelativeLayout
    android:layout_width="60dip"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_margin_size"
            	android:layout_marginRight="@dimen/item_margin_size"
            	>

    <ImageView
        android:id="@+id/item_message"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/message" >
    </ImageView>

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/body_margin_top_right"
        android:text="@string/method_phone"
        android:textSize="20sp" >
    </TextView>

    <CheckBox
        android:id="@+id/cb_message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/txt_message"
        android:checked="true"
        android:layout_marginLeft="@dimen/method_checkbox_margin_left"
        
        android:layout_centerHorizontal="true"
        android:text="" />

</RelativeLayout>
<RelativeLayout
    android:layout_width="60dip"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_margin_size"
            	android:layout_marginRight="@dimen/item_margin_size">

    <ImageView
        android:id="@+id/item_email"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/setting_email_disable" >
    </ImageView>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/body_margin_top_right"
        android:text="@string/method_email"
        android:textSize="20sp" >
    </TextView>

    <CheckBox
        android:id="@+id/cb_email"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/txt_email"
        android:checked="false"
        android:layout_marginLeft="@dimen/method_checkbox_margin_left"
        android:layout_centerHorizontal="true"
        android:text="" />

</RelativeLayout>
<RelativeLayout
    android:layout_width="60dip"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_margin_size"
            	android:layout_marginRight="@dimen/item_margin_size">
    <ImageView
        android:id="@+id/item_server"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_centerHorizontal="true" 
        android:src="@drawable/setting_server">
    </ImageView>
    <TextView
        android:id="@+id/txt_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_server"
         android:layout_marginTop="@dimen/body_margin_top_right"
        android:layout_centerHorizontal="true"
        android:text="@string/method_server"
        android:textSize="20sp" >
    </TextView>

    <CheckBox
        android:id="@+id/cb_server"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/txt_server"
        android:checked="true"
        android:layout_marginLeft="@dimen/method_checkbox_margin_left"
        android:layout_centerHorizontal="true"
        android:text="" />

</RelativeLayout>

<GridView
    android:id="@+id/gridViewMethod"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:numColumns="3" >
</GridView>

</LinearLayout>